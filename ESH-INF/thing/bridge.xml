<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="synologysurveillancestation"
						xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
						xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
						xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">
	<bridge-type id="station">
		<label>Bridge Synology Surveilance Station API</label>
		<description>Represents the API for Synology Surveilance Station.</description>

		<channel-groups>
			<channel-group id="common-bridge" typeId="common-bridge-type" />
			<channel-group id="notification-filter" typeId="notification-filter-type" />
		</channel-groups>

		<!-- 
		<channels>
			<channel id="homemode" typeId="homemode-channel" />
			<channel id="eventtrigger" typeId="eventtrigger-channel" />
			<channel id="sid" typeId="sid-channel" />
		</channels>
 		-->

		<properties>
			<property name="vendor">Synology</property>
		</properties>

		<config-description>
			<parameter name="protocol" type="text">
				<label>Protocol:</label>
				<description>Protocol (http, https) for accessing Surveillance Station</description>
				<default>http</default>
				<required>true</required>
			</parameter>
			<parameter name="host" type="text">
				<label>IP-Address:</label>
				<description>IP of Surveillance Station</description>
				<required>true</required>
			</parameter>
			<parameter name="port" type="text">
				<label>Port:</label>
				<description>Port for accessing Surveillance Station</description>
				<default>5000</default>
				<required>true</required>
			</parameter>
			<parameter name="username" type="text">
				<label>User name:</label>
				<description>User name for accessing camera</description>
				<required>true</required>
			</parameter>
			<parameter name="password" type="text">
				<label>Password:</label>
				<context>password</context>
				<description>Password for accessing camera</description>
				<required>true</required>
			</parameter>
			<parameter name="refresh-rate-events" unit="s" type="integer">
				<label>Event refresh rate:</label>
				<description>Refresh rate for station global events in seconds (0 to disable)</description>
				<default>3</default>
				<required>true</required>
			</parameter>
		</config-description>
	</bridge-type>

	<channel-group-type id="common-bridge-type">
		<label>Common bridge channels</label>
		<description>Common channels of your bridge (Disk Station)</description>
		<channels>
			<channel id="homemode" typeId="homemode-channel" />
			<channel id="eventtrigger" typeId="eventtrigger-channel" />
			<channel id="sid" typeId="sid-channel" />
		</channels>
	</channel-group-type>

	<channel-group-type id="notification-filter-type">
		<label>Notification Filter</label>
		<description>Notification filter channels - require admin type user on diskstation</description>
		<channels>
			<channel id="notification-filter-cameraconnectionlost" typeId="notification-filter-channel" >
				<label> Camera connection lost</label>
				<description>Notifications for lost connection to camera. 0:disable all, 1:Email, 2:SMS, 4:Mobile, 7:Email+SMS+Mobile</description>
			</channel>
			<channel id="notification-filter-cameraconnectionresumed" typeId="notification-filter-channel" >
				<label> Camera connection resumed</label>
				<description>Notifications for resumed connection to camera. 0:disable all, 1:Email, 2:SMS, 4:Mobile, 7:Email+SMS+Mobile</description>
			</channel>
			<channel id="notification-filter-motiondetected" typeId="notification-filter-channel" >
				<label> Motion detected</label>
				<description>Notifications for detected motion. 0:disable all, 1:Email, 2:SMS, 4:Mobile, 7:Email+SMS+Mobile</description>
			</channel>
			<channel id="notification-filter-digitalinputdetected" typeId="notification-filter-channel" >
				<label> Digital input detected</label>
				<description>Digital input on camera detected. 0:disable all, 1:Email, 2:SMS, 4:Mobile, 7:Email+SMS+Mobile</description>
			</channel>
			<channel id="notification-filter-audiodetected" typeId="notification-filter-channel" >
				<label> Audio detected</label>
				<description>Audio detected. 0:disable all, 1:Email, 2:SMS, 4:Mobile, 7:Email+SMS+Mobile</description>
			</channel>
			<channel id="notification-filter-tamperingdetected" typeId="notification-filter-channel" >
				<label> Tampering detected</label>
				<description>Tampering detected. 0:disable all, 1:Email, 2:SMS, 4:Mobile, 7:Email+SMS+Mobile</description>
			</channel>
			<channel id="notification-filter-archivelimitreached" typeId="notification-filter-channel" >
				<label> Archive limit reached</label>
				<description>Archive limit reached. 0:disable all, 1:Email, 2:SMS, 4:Mobile, 7:Email+SMS+Mobile</description>
			</channel>
		</channels>
	</channel-group-type>

	<channel-type id="homemode-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>Home Mode</label>
		<description>Home Mode of your Surveillance Station</description>
	</channel-type>
	<channel-type id="eventtrigger-channel" advanced="true">
		<item-type>Number</item-type>
		<label>Trigger external event</label>
		<description>Trigger external event 1 to 10</description>
		<state min="0" max="10" step="1"></state>
	</channel-type>
	<channel-type id="sid-channel" advanced="true">
		<item-type>String</item-type>
		<label>Current SID</label>
		<description>Current session ID (SID)</description>
	</channel-type>
	<channel-type id="notification-filter-channel" advanced="true">
		<item-type>String</item-type>
		<label>Notification Filter</label>
		<description>Notification filter source. 0:disable all, 1:Email, 2:SMS, 4:Mobile, 7:Email+SMS+Mobile</description>
		<state>
			<options>
				<option value="0">Disabled</option>
				<option value="1">Email</option>
				<option value="2">SMS</option>
				<option value="3">Email+SMS</option>
				<option value="4">Mobile</option>
				<option value="5">Email+Mobile</option>
				<option value="6">SMS+Mobile</option>
				<option value="7">Email+SMS+Mobile</option>
			</options>
		</state>
	</channel-type>
</thing:thing-descriptions>
